@page "/players"

<PageTitle>Игроки</PageTitle>
<RadzenRow Gap="5" RowGap="5">
    <RadzenColumn Size="12">
	    <RadzenText Text="Игроки" TextStyle="TextStyle.H4" TagName="TagName.H1" TextAlign="TextAlign.Center"></RadzenText>
		<RadzenAccordion Multiple="true">
				<Items>
				@foreach (var server in ServerController.ServerList)
				{
					<RadzenAccordionItem Text="@server.Name" Icon="group">
						<RadzenCard>
							@server.Players
						</RadzenCard>
					</RadzenAccordionItem>
				}
				</Items>
			</RadzenAccordion>
    </RadzenColumn>
</RadzenRow>
