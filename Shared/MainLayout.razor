@inherits LayoutComponentBase
<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenLayout style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body';">
    <RadzenHeader>
        <RadzenRow JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Center" Gap="0">
            <RadzenColumn Size="5">
                <RadzenSidebarToggle Click="@SidebarToggleClick"></RadzenSidebarToggle>
            </RadzenColumn>
            <RadzenColumn Size="7">
                <RadzenStack AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End"></RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenHeader>
    <RadzenBody Expanded="@sidebarExpanded">
        <RadzenRow class="rz-mx-auto rz-px-4 rz-pt-2 rz-pt-md-4 rz-pt-lg-6 rz-pt-xl-12 rz-pb-2 rz-pb-lg-12" Style="max-width: 1440px;">
            <RadzenColumn Size="12">
            @Body
            </RadzenColumn>
        </RadzenRow>
    </RadzenBody>
    <RadzenSidebar Expanded="@sidebarExpanded" style="z-index: 2">
        <RadzenStack AlignItems="Radzen.AlignItems.Center" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding); border-bottom: var(--rz-panel-menu-item-border);">
            <RadzenImage Path="images/xlogo.png"  style="width: 48px; height: 48px;"></RadzenImage>
            <RadzenText Text="Xyrenth - Rust Legacy" TextStyle="Radzen.Blazor.TextStyle.DisplayH6" class="rz-mb-0" style="color: var(--rz-sidebar-color); font-family: Georgia; text-align: center; text-transform: none; font-size: 20px; font-weight: bold" />
        </RadzenStack>
        <RadzenPanelMenu Style="font-size: 18px">
            <RadzenPanelMenuItem Icon="home" Text="Главная" Path="/" />
        </RadzenPanelMenu>
        <RadzenPanelMenu Style="font-size: 18px">
            <RadzenPanelMenuItem Icon="remove_circle_outline" Text="Блокировки" Path="/banlist" />
        </RadzenPanelMenu>
        <RadzenPanelMenu Style="font-size: 18px">
            <RadzenPanelMenuItem Icon="group" Text="Игроки" Path="/players" />
        </RadzenPanelMenu>
        @* <RadzenPanelMenu Style="font-size: 18px">
            <RadzenPanelMenuItem Text="Панель управления" Path="/manage" Icon="admin_panel_settings" />
        </RadzenPanelMenu> *@
        <RadzenStack AlignItems="Radzen.AlignItems.Center" Gap="0" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding);">
            <RadzenText Text="Xyrenth v1.0.0" TextStyle="Radzen.Blazor.TextStyle.Caption" style="color: var(--rz-text-disabled-color);" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
            <RadzenText Text="Copyright Ⓒ XyrenthProject 2023" TextStyle="Radzen.Blazor.TextStyle.Caption" class="rz-mb-0" style="color: var(--rz-text-disabled-color);" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
        </RadzenStack>
    </RadzenSidebar>
</RadzenLayout>
